<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pwdChange">

    <EditText
        android:id="@+id/original"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="115dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/newPwd"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/original"
        android:layout_marginStart="112dp"
        android:ems="10"

        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/reNew"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/newPwd"
        android:layout_marginStart="113dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/messageCheck_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/reNew"
        android:ems="10"
        android:hint="验证码"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/messageButton_pwd"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/reNew"
        android:text="获取验证码" />

    <Button
        android:id="@+id/sure_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="197dp"
        android:text="确定" />

    <TextView
        android:id="@+id/originPwd"
        android:layout_width="112dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:text="原密码"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/newPassword"
        android:layout_width="112dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/original"
        android:text="新密码"
        android:gravity="center_vertical"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/rePassword"
        android:layout_width="112dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/newPwd"
        android:text="确认密码"
        android:gravity="center_vertical"
        android:textSize="22sp" />
</RelativeLayout>