<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_confirm_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <com.example.administrator.my12306.TopBarForP
        android:id="@+id/topbarforp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#0033FF"
        app:leftBackbutton="@drawable/back"
        app:titleTextColorforp="#FFF"
        app:titleTextSizeforp="8sp">

    </com.example.administrator.my12306.TopBarForP>

    <TextView
        android:id="@+id/time_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/toPort"
        android:layout_alignParentStart="true"
        android:background="#0033FF"
        android:gravity="center"
        android:text="TextView" />

    <TextView
        android:id="@+id/outTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/fromPort"
        android:layout_alignTop="@+id/arriveTime"
        android:gravity="center"
        android:text="TextView" />

    <TextView
        android:id="@+id/arriveTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="37dp"
        android:layout_marginTop="114dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/trainNumber_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/outTime"
        android:layout_centerHorizontal="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/lastTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView33"
        android:layout_toEndOf="@+id/fromPort"
        android:text="TextView" />

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="164dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="商务座" />

        <Button
            android:id="@+id/btnBetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="一等座" />

        <Button
            android:id="@+id/btnGood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="二等座" />

        <Button
            android:id="@+id/btnWorst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="无座" />
    </LinearLayout>


    <Button
        android:id="@+id/btnCon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="111dp"
        android:text="提交订单"
        android:textSize="@dimen/textsize" />

    <TextView
        android:text="@string/fuwu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCon"
        android:layout_alignParentStart="true"
        android:id="@+id/tvTip"
        android:textSize="@dimen/textsize" />

    <TextView
        android:id="@+id/toPort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/trainNumber_order"
        android:layout_alignEnd="@+id/arriveTime"
        android:text="TextView"
        android:textSize="@dimen/textsize" />

    <TextView
        android:id="@+id/fromPort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/trainNumber_order"
        android:layout_alignParentStart="true"
        android:layout_marginStart="44dp"
        android:text="TextView"
        android:textSize="@dimen/textsize" />

    <TextView
        android:id="@+id/tvAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"

        android:layout_below="@+id/passengers"
        android:layout_marginTop="-188dp"
        android:drawableStart="@drawable/ic_control_point_black_24dp"
        android:gravity="left"
        android:paddingLeft="120dp"
        android:text="添加乘客"
        android:textSize="@dimen/titlesize" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView36"
        android:layout_marginStart="17dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/passengers"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:text="TextView" />

    <ListView
        android:id="@+id/passengers"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="188dp" />

</RelativeLayout>
