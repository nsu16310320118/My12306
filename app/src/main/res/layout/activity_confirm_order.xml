<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_confirm_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aurora.t12306.ConfirmOrder">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/outTime"
        android:layout_below="@+id/fromPort"
        android:layout_alignStart="@+id/fromPort"
        android:layout_marginTop="11dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/outTime"
        android:layout_alignStart="@+id/outTime"
        android:layout_marginTop="11dp"
        android:id="@+id/firstSite" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arriveTime"
        android:layout_alignBaseline="@+id/outTime"
        android:layout_alignBottom="@+id/outTime"
        android:layout_alignStart="@+id/toPort" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/firstSite"
        android:layout_alignEnd="@+id/arriveTime"
        android:id="@+id/lastSite" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:id="@+id/Ccheci"
        android:layout_above="@+id/arriveTime"
        android:layout_toEndOf="@+id/fromPort" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lastSite"
        android:layout_alignStart="@+id/Ccheci"
        android:id="@+id/lastTime" />

    <LinearLayout
        android:id="@+id/line2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstSite"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBest"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="商务座" />

        <Button
            android:text="一等座"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBetter"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

        <Button
            android:text="二等座"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGood"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

        <Button
            android:text="无座"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnWorst"
            android:layout_weight="1"
            android:background="@android:color/transparent" />
    </LinearLayout>


    <Button
        android:text="提交订单"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAdd"
        android:layout_marginTop="13dp"
        android:id="@+id/btnCon"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/textsize" />

    <TextView
        android:text="@string/fuwu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCon"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:id="@+id/tvTip"
        android:textSize="@dimen/textsize" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:id="@+id/toPort"
        android:layout_alignBottom="@+id/fromPort"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/textsize" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fromPort"
        android:layout_marginTop="70dp"
        android:layout_marginStart="35dp"
        android:textSize="@dimen/textsize"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="添加乘客"
        android:layout_width="match_parent"
        android:paddingLeft="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvAdd"

        android:textSize="@dimen/titlesize"

        android:drawableStart="@drawable/ic_control_point_black_24dp"
        android:gravity="left"
        android:layout_marginTop="74dp"
        android:layout_below="@+id/line2"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:id="@+id/textView33" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:layout_toEndOf="@+id/firstSite"
        android:id="@+id/textView34" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:layout_toStartOf="@+id/lastSite"
        android:id="@+id/textView35" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="21dp"
        android:id="@+id/textView36" />

</RelativeLayout>
